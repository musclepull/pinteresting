<div class="container-content">
    <div class="container">
            <h2>Shall I bring the tub of ice-cream?</h2>
              
              <div class="form-group">
                  <%= label_tag 'name', 'Full Name' %>
                  <%= text_field_tag 'name', nil, class: 'form-control', placeholder: 'Your Name' %>
              </div>
              
              <div class="form-group">
                 <%= label_tag 'company', 'Company' %>
                 <%= email_field_tag 'company', nil, class: 'form-control', placeholder: 'Your Company Name' %>
             </div>
             
             <div class="form-group">
                 <%= label_tag 'email', 'Email' %>
                 <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Your Email Address' %>
             </div>
             
             <div class="form-group">
                 <%= label_tag 'comments', 'Comments' %>
                 <%= text_area_tag 'comments', nil, class: 'form-control', rows: 4, placeholder: 'Comments...' %>
             </div>
              <%= link_to "Send Email",'#', class: "btn btn-primary btn-lg" %>
  </div>
</div>
